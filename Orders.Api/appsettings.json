{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "../logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] ({CorrelationId}) {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },

  "ConnectionStrings": {
    "Default": "Data Source=../orders.db"
  },
  "Jwt": {
    "Issuer": "OrdersApi",
    "Audience": "OrdersApiClient",
    "Key": "ZbJ9YWYpY8R0K9kz6t3wQ2pH1sN7uM5xC4v8e2L0r9a3d6f1b7c5e1q2t8u0w4y6",
    "ExpiresMinutes": 60
  },
  "AllowedHosts": "*"
}
